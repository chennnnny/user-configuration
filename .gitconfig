[user]
    name = chenyao4
    email = chenyao4@kingsoft.com
[core]
    autocrlf = true
    safecrlf = true
    quotepath = false
    excludesfile = ~/.gitignore_global
[alias]
    last = log -1 --stat
    cp = cherry-pick
    co = checkout
    cl = clone
    ci = commit
    st = status -sb
    br = branch
    unstage = reset HEAD --
    dc = diff --cached
    d = difftool
    gr = log -50 --graph --oneline --decorate
    lg = log -50 --graph --color --decorate --date=format:'%Y-%m-%d %H:%M:%S' --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Cgreen(%cd) %C(bold blue)<%an>%Cred|' --abbrev-commit
[i18n]
    commitencoding = utf-8
    logoutputencoding = utf-8
[diff]
    tool = bc4
[difftool]
    prompt = false
[difftool "bc4"]
    cmd = BComp \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = bc4
[mergetool]
    prompt = false
[mergetool "bc4"]
    cmd = BComp \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
    trustexitcode = true
[difftool "sourcetree"]
    cmd = BComp \"$LOCAL\" \"$REMOTE\"
[mergetool "sourcetree"]
    cmd = BComp \"$LOCAL\" \"$REMOTE\" \"$BASE\" -o \"$MERGED\"
    trustExitCode = true
